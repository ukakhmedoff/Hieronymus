<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textTranslated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/toolbar_items_margin"
        android:layout_marginRight="@dimen/toolbar_items_margin"
        android:layout_marginTop="@dimen/toolbar_items_margin"
        android:layout_toStartOf="@+id/addFavouriteTranslator"
        android:text="sdfhgsdhsf"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <com.like.LikeButton
        android:id="@+id/addFavouriteTranslator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textTranslated"
        android:layout_marginLeft="@dimen/toolbar_items_margin"
        android:layout_marginRight="@dimen/toolbar_items_margin"
        app:icon_size="16dp"
        app:icon_type="heart"
        android:layout_alignBottom="@+id/textTranslated"/>
</RelativeLayout>