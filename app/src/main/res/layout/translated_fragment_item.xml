<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textTranslated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addFavouriteTranslator"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorTextTo"
        android:textStyle="bold"/>

    <com.like.LikeButton
        android:id="@+id/addFavouriteTranslator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/textTranslated"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textTranslated"
        app:icon_size="16dp"
        app:icon_type="star"/>
</RelativeLayout>