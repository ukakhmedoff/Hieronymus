<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/translatedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_recycler_item"
        android:layout_marginRight="@dimen/margin_left_recycler_item"
        android:layout_toStartOf="@+id/addFavourite"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <com.like.LikeButton
        android:id="@+id/addFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/translatedText"
        app:icon_size="16dp"
        app:icon_type="heart"/>
</RelativeLayout>