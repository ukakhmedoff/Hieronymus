<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/translateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_recycler_item"
        android:layout_marginTop="@dimen/margin_top_recycler_item"
        android:text="Hi!"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintLeft_toRightOf="@+id/translateId"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/addGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_recycler_item"
        android:layout_marginRight="@dimen/margin_right_recycler_item"
        android:layout_marginTop="@dimen/margin_top_recycler_item"
        app:layout_constraintBottom_toBottomOf="@+id/translateSubtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/translateTitle"
        app:srcCompat="@drawable/ic_favorite_border_grey_600_24dp"/>

    <ImageView
        android:id="@+id/addFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_recycler_item"
        android:layout_marginRight="@dimen/margin_right_recycler_item"
        android:layout_marginTop="@dimen/margin_top_recycler_item"
        app:layout_constraintBottom_toBottomOf="@+id/translateSubtitle"
        app:layout_constraintRight_toLeftOf="@+id/addGroup"
        app:layout_constraintTop_toTopOf="@+id/translateTitle"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/ic_add"/>

    <TextView
        android:id="@+id/translateSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_recycler_item"
        android:text="Hello, hi, hallo"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toLeftOf="@+id/translateTitle"
        app:layout_constraintTop_toBottomOf="@+id/translateTitle"/>

    <TextView
        android:id="@+id/translateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_right_recycler_item"
        android:layout_marginLeft="@dimen/margin_left_recycler_item"
        android:layout_marginTop="@dimen/margin_top_recycler_item"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/translateSubtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/translateTitle"
        app:layout_constraintVertical_bias="0.514"/>
</android.support.constraint.ConstraintLayout>