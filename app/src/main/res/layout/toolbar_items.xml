<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <Spinner
        android:id="@+id/language_1"
        style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/toolbar_items_margin"
        android:layout_marginEnd="@dimen/toolbar_items_margin"
        android:layout_marginLeft="@dimen/toolbar_items_margin"
        android:layout_marginRight="@dimen/toolbar_items_margin"
        android:layout_marginStart="@dimen/toolbar_items_margin"
        android:layout_marginTop="@dimen/toolbar_items_margin"
        app:layout_constraintBottom_toBottomOf="@+id/btnRepeat"
        app:layout_constraintRight_toLeftOf="@+id/btnRepeat"
        app:layout_constraintTop_toTopOf="@+id/btnRepeat"/>

    <Spinner
        android:id="@+id/language_2"
        style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/toolbar_items_margin"
        android:layout_marginEnd="@dimen/toolbar_items_margin"
        android:layout_marginLeft="@dimen/toolbar_items_margin"
        android:layout_marginRight="@dimen/toolbar_items_margin"
        android:layout_marginStart="@dimen/toolbar_items_margin"
        android:layout_marginTop="@dimen/toolbar_items_margin"
        app:layout_constraintBottom_toBottomOf="@+id/btnRepeat"
        app:layout_constraintLeft_toRightOf="@+id/btnRepeat"
        app:layout_constraintTop_toTopOf="@+id/btnRepeat"/>

    <ImageView
        android:id="@+id/btnRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_items_margin"
        android:layout_marginRight="@dimen/toolbar_items_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_repeat_black_48dp"/>
</android.support.constraint.ConstraintLayout>